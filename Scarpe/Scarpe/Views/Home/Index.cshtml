@model IEnumerable<Scarpe.Models.Prodotti>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">PRODOTTI</h2>

<p>
    @Html.ActionLink("Aggiungi prodotto", "Create", new { }, new {@class = "btn btn-primary"})
</p>

<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-4">
            <div class="thumbnail">
                <img src="@item.Immagine1" alt="product-image" style="width: 300px">
                <div>
                    <div class="row mt-2">
                        <div class="col-8">
                            <h3 class="fs-5">@item.Nome</h3>
                        </div>
                        <div class="col-4 text-end">
                            <p>€ @item.Prezzo</p>
                        </div>
                    </div>
                    </div>
                @Html.ActionLink("Dettagli", "Dettagli", new { id = item.ID }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Elimina", "DeleteProd", new { id = item.ID }, new { @class = "btn btn-danger" })
            </div>
        </div>
    }

</div>
